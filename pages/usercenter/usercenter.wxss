/* pages/usercenter/usercenter.wxss */

.top{
  display: flex;
  height: 180px;
  background-color: #66CCFF;
  flex-direction: row;
  
}
.userIcon{
  width: 60px;
  height: 60px;
  border: 5px solid rgba(0,0,0,0.5);
  border-radius: 50%;
  margin-top: 60px;
  margin-left: 25px;
}
#username{
  color: rgb(95, 81, 105);
  margin-top: 80px;
  margin-left: 10px;
  vertical-align: middle;
  font-size: 18px;
  letter-spacing: 1px;
}
.middle{
  width: 95%;
  height: 100px;
  border: 1px;
  border-radius: 10px;
  margin:0 auto;
  margin-top: 10px;
  background-color: rgb(240, 244, 248);
}

.model{
  display: flex;
  align-items: center;
  justify-content: space-between;
  
}
.carIcon{
  height: 40px;
  width: 40px;
  margin-left: 20px;
  margin-right: 20px;
  margin-top: 13px;  
}
.desc{
  display: flex;
  align-items: center;
  justify-content: space-between;
}
#iconDesc{
  margin-top: 10px;
  font-size: 11px;
  margin-left: 22px;
  margin-right: 18px;
}
.bottom{
  width: 95%;
  height: 75px;
  /* border:solid 1px; */
  margin:0 auto;
  /* margin-top: 180px; */
  position: absolute;
  bottom: 10px;
}
.bottom text{
  font-size: 11px;
  color: rgb(93, 93, 105);
  display: flex;
  align-items: center;
  justify-content: center;
  letter-spacing: 1px;
}
.dologin{
  display: flex;
  height: 180px;
  background-color: rgb(55, 186, 247);
  flex-direction: row; 
  align-items: center;
  justify-content: center;
}
#btn1{
  size: 1px;
  height: 30px;
  border-radius: 50%;
  background-color: rgb(240, 244, 248);
  line-height: 18px;
}